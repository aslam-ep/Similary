<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="#7DFFFFFF"
    android:layout_gravity="center"
    android:layout_margin="13dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/close_button"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_baseline_clear_24"
            android:gravity="center" />

        <androidx.cardview.widget.CardView
            android:id="@+id/poster_card_view"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/poster"
                android:src="@drawable/poster_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_margin="2dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ant-Man and the Wasp"
            android:textColor="@color/white"
            android:fontFamily="@font/amaranth"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/poster_card_view"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/year_runtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/movie_name"
            android:gravity="center">
            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018"
                android:textColor="@color/white"
                android:fontFamily="@font/amaranth"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/movie_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textColor="@color/white"
                android:fontFamily="@font/amaranth"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/runtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="118 min"
                android:textColor="@color/white"
                android:fontFamily="@font/amaranth"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action, Adventure, Comedy"
            android:textColor="@color/white"
            android:fontFamily="@font/amaranth"
            android:textSize="14dp"
            android:layout_below="@id/year_runtime"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/ratings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/genre"
            android:gravity="center"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/imdb"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="@color/white"
                android:fontFamily="@font/amaranth"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/imdb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textColor="@color/white"
                android:fontFamily="@font/amaranth"
                android:textSize="16dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/movie_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="@color/white"
                android:fontFamily="@font/amaranth"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/roten"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="@color/white"
                android:fontFamily="@font/amaranth"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/rotten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87%"
                android:textColor="@color/white"
                android:fontFamily="@font/amaranth"
                android:textSize="16dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ratings"
            android:textColor="@color/white"
            android:fontFamily="@font/amaranth"
            android:textSize="16dp"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:textAlignment="center"
            android:text="As Scott Lang balances being both a superhero and a father, Hope van Dyne and Dr. Hank Pym present an urgent new mission that finds the Ant-Man fighting alongside The Wasp to uncover secrets from their past." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/trailer_button"
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amaranth"
            android:text="Trailer"
            app:iconGravity="textStart"
            app:iconTint="@null"
            android:layout_below="@id/plot"
            android:layout_marginBottom="40dp"
            app:icon="@drawable/youtube"
            app:iconSize="24dp"
            app:rippleColor="@color/navy_blue_v1"
            app:cornerRadius="20dp"
            app:backgroundTint="@color/white"
            android:textColor="@color/navy_blue_v1"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>