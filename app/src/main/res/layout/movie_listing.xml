<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants" >

    <androidx.cardview.widget.CardView
        android:id="@+id/movie_list_image_card_view"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:focusable="false"
        android:focusableInTouchMode="false">
        <ImageView
            android:id="@+id/movie_poster_list"
            android:src="@drawable/ic_baseline_broken_image_24"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/movie_name_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie Name"
        android:textColor="@color/white"
        android:fontFamily="@font/amaranth"
        android:textSize="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/movie_list_image_card_view"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
    <TextView
        android:id="@+id/movie_year_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_name_list"
        android:text="0000"
        android:textColor="#E7FFFFFF"
        android:fontFamily="@font/amaranth"
        android:textSize="13dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@id/movie_list_image_card_view"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7DFFFFFF"
        android:layout_alignParentBottom="true"
        android:focusable="false"
        android:focusableInTouchMode="false"/>
</android.widget.RelativeLayout>